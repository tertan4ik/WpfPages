<Window x:Class="WpfApp_DataBinding_Ver2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_DataBinding_Ver2"
        mc:Ignorable="d"
        Title="Медицинская система" Height="700" Width="1000"
        Background="{DynamicResource BackgroundBrush}">

    <DockPanel>
        <!-- Меню - основа готова -->
        <Menu DockPanel.Dock="Top" Background="{DynamicResource PrimaryBrush}">
            <MenuItem Header="Настройки">
                <MenuItem  Header="Сменить тему" Click="ChangeTheme_Click"/>
            </MenuItem>
        </Menu>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
<Application x:Class="WpfApp_DataBinding_Ver2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Colors/DefaultColors.xaml"/>
                <ResourceDictionary Source="/Styles/UI/Button.xaml"/>
                <ResourceDictionary Source="/Styles/UI/Text.xaml"/>
                <ResourceDictionary Source="/Styles/UI/Panels.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="Page">
                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
   
            </Style>
            <Style TargetType="Window">
                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>

            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
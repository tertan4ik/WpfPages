<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#EF4444</Color>
    <Color x:Key="PrimaryDarkColor">#DC2626</Color>
    <Color x:Key="BackgroundColor">#262424</Color>
    <Color x:Key="IMO">#8B0000</Color>
    <Color x:Key="BorderColor">#FFFFFF</Color>
    <Color x:Key="DeleteColor">#8B0000</Color>
    <Color x:Key="AddColor">#44b00e</Color>
    <Color x:Key="AddColorHover">#369606</Color>
    <Color x:Key="DeleteColorHover">#4f0a0a</Color>
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="ClickColor">#f06c6c</Color>
    <Color x:Key="AddClickColor">#61e86d</Color>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="IsMouseOver" Color= "{StaticResource IMO}"/>
    <SolidColorBrush x:Key="DeleteButtonColor" Color="{StaticResource DeleteColor}"/>
    <SolidColorBrush x:Key="AddButtonColor" Color="{DynamicResource AddColor}"/>
    <SolidColorBrush x:Key="AddButtonHoverColor" Color="{DynamicResource AddColorHover}"/>
    <SolidColorBrush x:Key="DeleteButtonHoverColor" Color="{StaticResource DeleteColorHover}"/>
    <SolidColorBrush x:Key="StandClickColor" Color="{StaticResource ClickColor}"/>
    <SolidColorBrush x:Key="AddColorClick" Color="{StaticResource AddClickColor}"/>
</ResourceDictionary>
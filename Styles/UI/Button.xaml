<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Базовая кнопка - остальные стили допишешь -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="Padding" Value="15,8"/>
    </Style>

    <!-- Заглушки для специальных кнопок - допишешь символы и состояния -->
    <Style x:Key="AddButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <!-- Допишешь + символ и состояния -->
    </Style>

    <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <!-- Допишешь 🗑️ символ и состояния -->
    </Style>
</ResourceDictionary>